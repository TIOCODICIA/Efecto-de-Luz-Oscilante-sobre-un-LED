PROCESSOR 16F887
    ;Acontinuación presentaremos un programa con la finalidad de presentar los puertos en este caso el puerto b 
    ;como salidas para crear cambios en los registros que se podran visualizar en la simulación en la sección SFRs
    
    ;AGUSTIN MADRIGAL LUIS #17080167
    ;MECATRONICA 7A
    #include <xc.inc>
;CONFIG1 38C4
	CONFIG FOSC = INTRC_NOCLKOUT
	CONFIG WDTE = OFF
	CONFIG PWRTE = ON
	CONFIG MCLRE = OFF
	CONFIG CP = OFF
	CONFIG CPD = OFF
	CONFIG BOREN = OFF
	CONFIG IESO = OFF
	CONFIG FCMEN = ON
	CONFIG DEBUG = ON
;CONFIG2 3FFF
	CONFIG BOR4V=BOR40V
	CONFIG WRT = OFF
	PSECT udata
	    Seccion1:
		DS 1
	    Seccion2:
		DS 1
	    Seccion3:
		DS 1
		PSECT resetVec,class=CODE,delta=2
	    resetVec:
		PAGESEL PRINCIPAL
		goto PRINCIPAL
		PSECT code
	    PRINCIPAL:
		BANKSEL ANSELH
		CLRF ANSELH
		BANKSEL TRISB
		MOVLW 0b00000000
		MOVWF TRISB
		BANKSEL PORTB
		CLRF PORTB
		bcf STATUS,5
		bsf STATUS,6
		bcf STATUS,0
		BANKSEL OSCCON
		MOVLW  0b01110000
		MOVWF  OSCCON
	    INICIO:
		bcf STATUS,0
		bcf STATUS,5
		bcf STATUS,6
		MOVLW   0b00000001
		MOVWF   PORTB
		GOTO PROGRESIVOIZQUIERDA
	    PROGRESIVOIZQUIERDA:
		RLF PORTB
		BTFSS PORTB,7
		GOTO PROGRESIVOIZQUIERDA
		GOTO DECRECIENTEDERECHA
	    DECRECIENTEDERECHA:
		RRF PORTB
		BTFSS PORTB,0
		GOTO DECRECIENTEDERECHA
		GOTO INICIO 
END
